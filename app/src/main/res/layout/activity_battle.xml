<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:layout_gravity="center" android:background="@color/light_gray"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:padding="@dimen/activity_padding">

        <TextView android:id="@+id/tv_top" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="@string/choosespy"
                  android:textSize="18sp"/>

        <ListView android:id="@+id/lv_battle" android:layout_width="match_parent"
                  android:layout_height="0dp" android:layout_weight="1"
                  android:background="@drawable/corners_listview" android:divider="@color/gray"
                  android:dividerHeight="1dp"/>

        <include layout="@layout/separate_line"/>

        <TextView android:id="@+id/tv_middle" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/corners_all"
                  android:gravity="center"
                  android:paddingBottom="@dimen/small_vertical_padding"
                  android:paddingLeft="@dimen/normal_horizontal_padding"
                  android:paddingRight="@dimen/normal_horizontal_padding"
                  android:paddingTop="@dimen/small_vertical_padding"
                  android:text="@string/choosespy"
                  android:textColor="@color/dark_gray"
                  android:textSize="20sp"/>

        <include layout="@layout/separate_line"/>

        <TextView android:id="@+id/tv_bottom" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/corners_all"
                  android:gravity="center_vertical"
                  android:paddingBottom="@dimen/small_vertical_padding"
                  android:paddingLeft="@dimen/normal_horizontal_padding"
                  android:paddingRight="@dimen/normal_horizontal_padding"
                  android:paddingTop="@dimen/small_vertical_padding"
                  android:textColor="@color/dark_gray"
                  android:textSize="16sp"/>
        <include layout="@layout/separate_line"/>

        <Button android:id="@+id/btn_go_home"
                android:layout_width="match_parent" android:layout_height="40dp"
                android:background="@drawable/corners_buttom_green" android:text="@string/again"
                android:textColor="@color/white" android:textSize="20sp"/>

    </LinearLayout>
</LinearLayout>